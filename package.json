{
  "private": true,
  "name": "tracks-sample-manager",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "dist/"
    ],
    "rules": {
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        {
          "code": 100
        }
      ]
    }
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.3.2",
    "esbuild-css-modules-plugin": "^2.1.6",
    "esbuild-plugin-copy": "^1.2.1",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "finalhandler": "^1.1.2",
    "jest": "^27.5.1",
    "serve-static": "^1.14.2"
  },
  "dependencies": {
    "@ffmpeg/core": "^0.10.0",
    "@ffmpeg/ffmpeg": "^0.10.1",
    "esbuild": "^0.14.25",
    "jszip": "^3.7.1",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4"
  }
}
